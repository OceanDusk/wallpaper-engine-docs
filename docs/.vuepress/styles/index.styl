.site-name {
  color: $accentColor !important;
}

.search-box input {
  border-width: 2px !important;
  animation: pulse 2.5s infinite;
}

@keyframes pulse {
  from { border-color: $borderColor; }
  50% { border-color: $accentColor; }
  to { border-color: $borderColor; }
}

.footer-list { 
  display: flex;
  justify-content: space-between;
  padding: 0 1.5em;
  li {
    list-style: none;
    &.imprint {
      opacity: 0.75;
    }
  }
}