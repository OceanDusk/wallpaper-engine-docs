.site-name {
  color: $accentColor !important;
}

.search-box input {
  border-width: 2px !important;
  animation: pulse 2.5s infinite;
}

@keyframes pulse {
  from { border-color: $borderColor; }
  50% { border-color: $accentColor; }
  to { border-color: $borderColor; }
}

.footer-list { 
  display: flex;
  justify-content: space-between;
  padding: 0 1.5em;
  li {
    list-style: none;
    &.imprint {
      opacity: 0.75;
    }
  }
}

.effect {
  &-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-top: 30px;
  }
  &-box {
    flex: 1 1 30%;
    border: 1px solid $borderColor;
    max-width: 30%;
    margin: 0 0 10px 0;
    padding: 5px;
    &:hover {
      border-color: $accentColor;
    }
    > a {
      color: $textColor;
      text-decoration: none !important;
    }
    &.fake {
      height: 0;
      border-color: transparent;
    }
    &-image {
      margin: 0 auto;
      max-width: 100%;
      height 200px;
      background-size: cover;
      background-repeat: no-repeat;
    }
  }
}

@media (max-width: $MQNarrow)
  .effect {
    &-box {
      flex: 1 1 45%;
      max-width: 45%;
    }
  }